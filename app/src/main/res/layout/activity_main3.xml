<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <data>


        <variable
            name="contact"
            type="com.example.roomtask.model.Login" />
        <variable
            name="onclickitem"
            type="com.example.roomtask.Mainactivity3Handler" />

    </data>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:background="@drawable/grad"
        tools:context=".MainActivity3">
        >




        <EditText


            android:textColor="@color/white"
            android:id="@+id/editText1"
            android:text="@={contact.name}"
            android:layout_width="match_parent"
            android:textAlignment="center"
            android:layout_height="wrap_content"

            />

        <EditText


            android:textColor="@color/white"
            android:id="@+id/emailEDT1"
            android:text="@={contact.email}"
            android:textAlignment="center"
            android:layout_below="@id/editText1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            />
        <Button
            android:id="@+id/submit1"
            android:layout_width="120dp"
            android:layout_below="@id/emailEDT1"
            android:layout_height="wrap_content"
            android:backgroundTint="#C2185B"
            android:layout_marginTop="48dp"
            android:layout_marginLeft="70dp"
            android:text="Cancel"
            android:onClick="@{onclickitem::onCloseclicked}"
            android:textColor="@color/white"
            />
        <Button


            android:id="@+id/submit2"
            android:layout_width="120dp"
            android:layout_toRightOf="@id/submit1"
            android:layout_height="wrap_content"
            android:layout_below="@id/emailEDT1"
            android:backgroundTint="#3112C5"
            android:layout_marginTop="48dp"
            android:layout_marginLeft="10dp"
            android:onClick="@{onclickitem::oneditbutton}"
            android:text="Update"
            android:textColor="@color/white"
            />
    </RelativeLayout>
</layout>



